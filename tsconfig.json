{
  "compilerOptions": {
    "outDir": "public",
    "rootDir": "src",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "types": [
      "reflect-metadata"
    ],
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    ".idea"
  ],
  "include": [
    "src/*"
  ]
}